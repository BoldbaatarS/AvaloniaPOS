<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RestaurantPOS.Views.Dialogs.MessageDialog"
        Width="400" Height="220"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="SystemChrome"
        Background="#FAFAFA"
        CornerRadius="8">
    <StackPanel Margin="10" Spacing="15">
        <!-- Icon + Title -->
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Border Width="48" Height="48" CornerRadius="24" Background="{DynamicResource IconBackground}">
                <Image x:Name="IconImage" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="TitleBlock"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Message -->
        <TextBlock x:Name="MessageBlock" 
                   FontSize="14" 
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Margin="0,20,0,0">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="100"
                    Height="36"
                    Classes="primary-button"
                    Click="Ok_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Classes="secondary-button"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
